{
  "version": 2,
  "builds": [
    {
      "src": "backend/requirements.txt",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "^/(.*)\\.(js|css|png|jpg|gif|svg|woff2|woff|ttf)$",
      "dest": "/build/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ]
}
